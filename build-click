#!/bin/bash

set -e

INSTALL_DIR=$PWD/Qt
QBS_BIN=$INSTALL_DIR/Tools/QtCreator/bin/qbs
PY_LIBS=$PWD/pylibs
DIR_PREFIX=/lib/arm-linux-gnueabihf
BIN_DIR=$DIR_PREFIX/bin
LIB_DIR=$DIR_PREFIX
QML_DIR=$LIB_DIR

function cleanup_pylibs {
    lxc exec clickable-armhf -- bash -c "rm -rf $PY_LIBS"
}

if [ ! -d "$INSTALL_DIR/Tools" ]; then
    echo Cannot proceed without a recent qt release;
    echo Have you run the setup-click-env script?;
    exit 1;
fi

cleanup_pylibs

lxc exec clickable-armhf -- bash -c "cd $PWD && $QBS_BIN build -d ../__dekko_build_lxd -f . --clean-install-root --show-progress --force-probe-execution release project.click:true project.binDir:$BIN_DIR project.libDir:$LIB_DIR project.qmlDir:$QML_DIR project.dataDir:/usr/share/dekko profile:dekkoqt5-armhf"

sudo chown $USER -R ../__dekko_build_lxd
click build ../__dekko_build_lxd/release/install-root/
# lxc exec clickable-armhf -- bash -c "cd $PWD && click build ../__dekko_build_lxd/release/install-root/"

cleanup_pylibs # remove again to ensure we don't mess with host builds
