#! /bin/bash

set -e

qbs build -d ../__dekko_build -f . debug profile:dekkoqt5

export QMF_PLUGINS=$PWD/../__dekko_build/install-root/lib/qmf/plugins5
export DEKKO_PLUGINS=$PWD/../__dekko_build/install-root/lib//Dekko/plugins

# Location qmf will store the mailstore cache
export QMF_DATA=$HOME/.cache/dekko

exec $PWD/../__dekko_build/install-root/bin/dekko $@